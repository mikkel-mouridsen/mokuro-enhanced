{
  "name": "@mokuro-enhanced/reader",
  "version": "1.0.0",
  "description": "Electron-based manga reader with Yomitan integration",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "npm run build:electron-dev && concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:electron-prod && npm run build:react && electron-builder",
    "build:react": "vite build",
    "build:electron-dev": "tsc -p tsconfig.electron.json",
    "build:electron-prod": "tsc -p tsconfig.electron.json",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "@reduxjs/toolkit": "^2.0.1",
    "adm-zip": "^0.5.10",
    "axios": "^1.6.2",
    "panzoom": "^9.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.30.1",
    "redux-thunk": "^3.1.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.mokuro-enhanced.reader",
    "productName": "Mokuro Enhanced Reader",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/assets/icon/icon-512.png"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/assets/icon/icon-512.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/assets/icon/icon-512.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/assets/icon/icon-512.png"
    }
  }
}
