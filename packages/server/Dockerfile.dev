FROM node:20-alpine

WORKDIR /app

# Install build dependencies for native modules like bcrypt
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies (will compile bcrypt for Linux)
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start in watch mode
CMD ["npm", "run", "start:dev"]

